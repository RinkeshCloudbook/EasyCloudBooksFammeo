<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.FammeoFragment.ConversationsFragment"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_medium"
        android:layout_marginLeft="@dimen/spacing_middle"
        android:layout_marginRight="@dimen/spacing_middle"
        android:layout_marginTop="@dimen/spacing_medium"
        android:visibility="visible"
        app:cardCornerRadius="2dp"
        app:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/lin_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:minHeight="?attr/actionBarSize"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/txt_user"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="@dimen/dimen_10dp"
                    android:text="User"
                    android:layout_marginLeft="@dimen/dimen_10dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="@color/grey_80" />

                <ImageButton
                    android:id="@+id/bt_toggle_input"
                    android:layout_width="?attr/actionBarSize"
                    android:layout_height="?attr/actionBarSize"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:tint="@color/grey_80"
                    app:srcCompat="@drawable/ic_expand_arrow" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/lyt_expand_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.balysv.materialripple.MaterialRippleLayout
                    style="@style/RippleStyleBlack"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_40dp"
                    android:paddingLeft="@dimen/spacing_middle"
                    android:paddingRight="@dimen/spacing_middle">

                    <LinearLayout
                        android:id="@+id/lyt_all"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="?attr/actionBarSize"
                            android:layout_height="?attr/actionBarSize"
                            android:padding="@dimen/spacing_large"
                            android:tint="@color/grey_60"
                            app:srcCompat="@drawable/about_icon_email" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/spacing_middle"
                            android:layout_marginRight="@dimen/spacing_middle"
                            android:text="All"
                            android:layout_weight="1"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            android:textColor="@color/grey_90" />

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/shape_rounded_theam"
                            android:paddingBottom="@dimen/spacing_small"
                            android:paddingLeft="@dimen/spacing_xmedium"
                            android:paddingRight="@dimen/spacing_xmedium"
                            android:paddingTop="@dimen/spacing_small">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="10"
                                android:textAppearance="@style/Base.TextAppearance.AppCompat.Body2"
                                android:textColor="@android:color/white" />

                        </RelativeLayout>
                    </LinearLayout>

                </com.balysv.materialripple.MaterialRippleLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grey_10" />

                <com.balysv.materialripple.MaterialRippleLayout
                    style="@style/RippleStyleBlack"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_40dp"
                    android:paddingLeft="@dimen/spacing_middle"
                    android:paddingRight="@dimen/spacing_middle">

                    <LinearLayout
                        android:id="@+id/lyt_newCon"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="?attr/actionBarSize"
                            android:layout_height="?attr/actionBarSize"
                            android:padding="@dimen/spacing_large"
                            android:tint="@color/grey_60"
                            app:srcCompat="@drawable/ic_chat" />

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/spacing_middle"
                            android:layout_marginRight="@dimen/spacing_middle"
                            android:text="New Conversation"
                            android:layout_weight="1"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            android:textColor="@color/grey_90" />
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/shape_rounded_green"
                            android:paddingBottom="@dimen/spacing_small"
                            android:paddingLeft="@dimen/spacing_xmedium"
                            android:paddingRight="@dimen/spacing_xmedium"
                            android:paddingTop="@dimen/spacing_small">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="10"
                                android:textAppearance="@style/Base.TextAppearance.AppCompat.Body2"
                                android:textColor="@android:color/white" />

                        </RelativeLayout>
                    </LinearLayout>

                </com.balysv.materialripple.MaterialRippleLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grey_10" />
                <com.balysv.materialripple.MaterialRippleLayout
                    style="@style/RippleStyleBlack"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_40dp"
                    android:paddingLeft="@dimen/spacing_middle"
                    android:paddingRight="@dimen/spacing_middle">

                    <LinearLayout
                        android:id="@+id/lyt_favorite"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="?attr/actionBarSize"
                            android:layout_height="?attr/actionBarSize"
                            android:padding="@dimen/spacing_large"
                            android:tint="@color/grey_60"
                            app:srcCompat="@drawable/ic_star" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/spacing_middle"
                            android:layout_marginRight="@dimen/spacing_middle"
                            android:text="Favorite"
                            android:layout_weight="1"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            android:textColor="@color/grey_90" />

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/shape_rounded_orenge"
                            android:paddingBottom="@dimen/spacing_small"
                            android:paddingLeft="@dimen/spacing_xmedium"
                            android:paddingRight="@dimen/spacing_xmedium"
                            android:paddingTop="@dimen/spacing_small">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="10"
                                android:textAppearance="@style/Base.TextAppearance.AppCompat.Body2"
                                android:textColor="@android:color/white" />

                        </RelativeLayout>
                    </LinearLayout>

                </com.balysv.materialripple.MaterialRippleLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grey_10" />
                <com.balysv.materialripple.MaterialRippleLayout
                    style="@style/RippleStyleBlack"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_40dp"
                    android:paddingLeft="@dimen/spacing_middle"
                    android:paddingRight="@dimen/spacing_middle">

                    <LinearLayout
                        android:id="@+id/lyt_cat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="?attr/actionBarSize"
                            android:layout_height="?attr/actionBarSize"
                            android:padding="@dimen/spacing_large"
                            android:tint="@color/grey_60"
                            app:srcCompat="@drawable/cb_ic_edit_black" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/spacing_middle"
                            android:layout_marginRight="@dimen/spacing_middle"
                            android:text="Category"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            android:textColor="@color/grey_90" />

                    </LinearLayout>

                </com.balysv.materialripple.MaterialRippleLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:id="@+id/lin_allList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/dimen_10dp">
        <com.balysv.materialripple.MaterialRippleLayout
            style="@style/RippleStyleBlack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/lyt_parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_multi_selection"
                android:clickable="true"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/spacing_large"
                android:paddingTop="@dimen/spacing_large">

                <View
                    android:layout_width="@dimen/spacing_large"
                    android:layout_height="0dp" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/lyt_checked"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="@dimen/spacing_xmlarge"
                            android:layout_height="@dimen/spacing_xmlarge"
                            android:src="@drawable/shape_circle"
                            android:tint="@color/blue_grey_600" />

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_centerInParent="true"
                            app:srcCompat="@drawable/ic_done" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/lyt_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/image"
                            android:layout_width="@dimen/spacing_xmlarge"
                            android:layout_height="@dimen/spacing_xmlarge" />

                        <TextView
                            android:id="@+id/image_letter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            android:textColor="@android:color/white" />

                    </RelativeLayout>

                </RelativeLayout>

                <View
                    android:layout_width="@dimen/spacing_smlarge"
                    android:layout_height="0dp" />

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/from"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:text="Rinkesh patel"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            android:textColor="@color/grey_90"
                             />

                        <TextView
                            android:id="@+id/email"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_small"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:text="email.address@mail.com"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                            android:textColor="@color/grey_90"
                             />

                        <TextView
                            android:id="@+id/message"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:text="Rinkesh@gmail.com"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                            android:textColor="@color/grey_40" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:text="10:30 AM"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textColor="@color/blue_300"
                        android:textStyle="bold" />

                </RelativeLayout>

                <View
                    android:layout_width="@dimen/spacing_large"
                    android:layout_height="0dp" />
            </LinearLayout>

        </com.balysv.materialripple.MaterialRippleLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/lin_catList"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/dimen_10dp">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <LinearLayout
                android:layout_marginTop="@dimen/dimen_10dp"
                android:layout_width="85dp"
                android:layout_height="@dimen/dimen_35dp"
                android:background="@drawable/shape_rounded_orange"
                android:layout_marginLeft="@dimen/dimen_5dp"
                android:layout_marginBottom="@dimen/dimen_10dp">
                <LinearLayout
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Family"
                        android:padding="@dimen/dimen_7dp"
                        android:textColor="#fff"
                        android:gravity="center"
                        android:layout_weight="1"/>
                    <ImageButton
                        android:visibility="gone"
                        android:padding="@dimen/dimen_7dp"
                        android:layout_width="@dimen/dimen_10dp"
                        android:layout_height="@dimen/dimen_10dp"
                        android:src="@drawable/ic_close"
                        android:layout_gravity="center"
                        android:background="@drawable/shape_rounded_orange"
                        />
                </LinearLayout>


            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/dimen_10dp"
                android:layout_width="85dp"
                android:layout_height="@dimen/dimen_35dp"
                android:background="@drawable/shape_rounded_orange"
                android:layout_marginLeft="@dimen/dimen_5dp"
                android:layout_marginBottom="@dimen/dimen_10dp">
                <LinearLayout
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Friend"
                        android:padding="@dimen/dimen_7dp"
                        android:textColor="#fff"
                        android:gravity="center"
                        android:layout_weight="1"/>
                    <ImageButton
                        android:visibility="gone"
                        android:padding="@dimen/dimen_7dp"
                        android:layout_width="@dimen/dimen_10dp"
                        android:layout_height="@dimen/dimen_10dp"
                        android:src="@drawable/ic_close"
                        android:layout_gravity="center"
                        android:background="@drawable/shape_rounded_orange"
                        />
                </LinearLayout>


            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/dimen_10dp"
                android:layout_width="85dp"
                android:layout_height="@dimen/dimen_35dp"
                android:background="@drawable/shape_rounded_orange"
                android:layout_marginLeft="@dimen/dimen_5dp"
                android:layout_marginBottom="@dimen/dimen_10dp">
                <LinearLayout
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Spam"
                        android:padding="@dimen/dimen_7dp"
                        android:textColor="#fff"
                        android:gravity="center"
                        android:layout_weight="1"/>
                    <ImageButton
                        android:visibility="gone"
                        android:padding="@dimen/dimen_7dp"
                        android:layout_width="@dimen/dimen_10dp"
                        android:layout_height="@dimen/dimen_10dp"
                        android:src="@drawable/ic_close"
                        android:layout_gravity="center"
                        android:background="@drawable/shape_rounded_orange"
                        />
                </LinearLayout>


            </LinearLayout>
            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_marginTop="@dimen/dimen_10dp"
                android:layout_width="85dp"
                android:layout_height="@dimen/dimen_35dp"
                android:background="@drawable/shape_rounded_orange"
                android:layout_marginLeft="@dimen/dimen_5dp"
                android:layout_marginBottom="@dimen/dimen_10dp">
                <LinearLayout
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lead"
                        android:padding="@dimen/dimen_7dp"
                        android:textColor="#fff"
                        android:gravity="center"
                        android:layout_weight="1"/>
                    <ImageButton
                        android:visibility="gone"
                        android:padding="@dimen/dimen_7dp"
                        android:layout_width="@dimen/dimen_10dp"
                        android:layout_height="@dimen/dimen_10dp"
                        android:src="@drawable/ic_close"
                        android:layout_gravity="center"
                        android:background="@drawable/shape_rounded_orange"
                        />
                </LinearLayout>


            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/dimen_10dp"
                android:layout_width="85dp"
                android:layout_height="@dimen/dimen_35dp"
                android:background="@drawable/shape_rounded_orange"
                android:layout_marginLeft="@dimen/dimen_5dp"
                android:layout_marginBottom="@dimen/dimen_10dp">
                <LinearLayout
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Prospect"
                        android:padding="@dimen/dimen_7dp"
                        android:textColor="#fff"
                        android:gravity="center"
                        android:layout_weight="1"/>
                    <ImageButton
                        android:visibility="gone"
                        android:padding="@dimen/dimen_7dp"
                        android:layout_width="@dimen/dimen_10dp"
                        android:layout_height="@dimen/dimen_10dp"
                        android:src="@drawable/ic_close"
                        android:layout_gravity="center"
                        android:background="@drawable/shape_rounded_orange"
                        />
                </LinearLayout>


            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/dimen_10dp"
                android:layout_width="85dp"
                android:layout_height="@dimen/dimen_35dp"
                android:background="@drawable/shape_rounded_orange"
                android:layout_marginLeft="@dimen/dimen_5dp"
                android:layout_marginBottom="@dimen/dimen_10dp">
                <LinearLayout
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Supplier"
                        android:padding="@dimen/dimen_7dp"
                        android:textColor="#fff"
                        android:gravity="center"
                        android:layout_weight="1"/>
                    <ImageButton
                        android:visibility="gone"
                        android:padding="@dimen/dimen_7dp"
                        android:layout_width="@dimen/dimen_10dp"
                        android:layout_height="@dimen/dimen_10dp"
                        android:src="@drawable/ic_close"
                        android:layout_gravity="center"
                        android:background="@drawable/shape_rounded_orange"
                        />
                </LinearLayout>


            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:visibility="gone"
        android:id="@+id/txt_converContent"
        android:layout_width="match_parent"
        android:background="@drawable/no_content_bg"
        android:layout_height="wrap_content"
        android:textSize="@dimen/dimen_15dp"
        android:textColor="#757ff3"
        android:textStyle="bold"
        android:layout_marginRight="@dimen/dimen_10dp"
        android:layout_marginLeft="@dimen/dimen_10dp"
        android:padding="@dimen/dimen_10dp"
        android:layout_marginBottom="@dimen/dimen_10dp"
        />
</LinearLayout>