<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.WorkEducation"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/lin_dir"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@color/main_color_500"
        app:popupTheme="@style/Theme.AppCompat.Light.DarkActionBar"
        app:theme="@style/AppTheme.Title">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="@dimen/dimen_40dp"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:src="@drawable/ic_back_arrow" />

        <TextView
            android:id="@+id/txt_selectDirName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:ellipsize="end"
            android:gravity="center_vertical"
             android:text="Add wrok &amp; education"
            android:paddingLeft="@dimen/dimen_12dp"
            android:singleLine="true"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/dimen_18dp"
            android:textStyle="bold" />

    </LinearLayout>
    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:mContext=".activity.MainActivity"
        tools:showIn="@layout/activity_search_user">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.coordinatorlayout.widget.CoordinatorLayout
                android:id="@+id/coordinatorLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/search_edit_frame"
                android:paddingTop="3dp"
                tools:context=".activity.MainActivity">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/spacing_large" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="230dp"
                        android:layout_marginLeft="@dimen/spacing_large"
                        android:layout_marginRight="@dimen/spacing_large"
                        app:cardCornerRadius="@dimen/dimen_5dp"
                        app:cardElevation="3dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="230dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:scaleType="fitXY"
                                android:src="@drawable/search_bg" />

                            <LinearLayout
                                android:id="@+id/lin_bg_image"
                                android:layout_width="match_parent"
                                android:layout_height="200dp"
                                android:layout_gravity="center"
                                android:orientation="vertical"
                                android:padding="@dimen/dimen_7dp">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="?attr/actionBarSize"
                                    android:gravity="center_vertical"
                                    android:text="@string/educationText"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                                    android:textColor="@color/grey_3" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="?attr/actionBarSize"
                                    android:gravity="center_vertical"
                                    android:text="@string/educationTextSmall"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                                    android:textColor="@color/grey_3"
                                    android:textSize="@dimen/dimen_12dp" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/dimen_20dp"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:orientation="horizontal">

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:orientation="horizontal">

                                            <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                                xmlns:tools="http://schemas.android.com/tools"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:paddingTop="@dimen/default_vertical_padding"
                                                android:paddingBottom="@dimen/default_vertical_padding">

                                                <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content">

                                                    <EditText
                                                        android:id="@+id/edt_name"
                                                        style="@style/EditText.Flat.Grey"
                                                        android:layout_width="match_parent"
                                                        android:layout_height="45dp"
                                                        android:background="@drawable/edit_text_round_bg_white"
                                                        android:hint="Type Your Organization Name...."
                                                        android:maxLines="1"
                                                        android:paddingLeft="@dimen/spacing_middle"
                                                        android:singleLine="true" />

                                                    <ImageButton
                                                        android:id="@+id/btn_next"
                                                        android:layout_width="@dimen/dimen_40dp"
                                                        android:layout_height="@dimen/dimen_35dp"
                                                        android:layout_alignParentRight="true"
                                                        android:layout_centerVertical="true"
                                                        android:layout_margin="5dp"
                                                        android:background="#7367F0"
                                                        android:src="@drawable/ic_arrow_right_white"
                                                        android:text="Button" />

                                                </RelativeLayout>

                                            </androidx.cardview.widget.CardView>

                                        </LinearLayout>
                                    </LinearLayout>

                                </LinearLayout>
                            </LinearLayout>

                        </RelativeLayout>


                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/spacing_large"
                        android:layout_marginRight="@dimen/spacing_large"
                        app:cardCornerRadius="@dimen/dimen_5dp"
                        app:cardElevation="3dp"
                        android:layout_marginTop="@dimen/dimen_10dp">
                        <androidx.core.widget.NestedScrollView
                            android:id="@+id/nested_content"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:clipToPadding="false"
                            android:scrollbars="none"
                            android:scrollingCache="true"
                            android:background="@drawable/gradient"
                            app:layout_behavior="@string/appbar_scrolling_view_behavior">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/round_rect_grey_border"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/dimen_45dp"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal"
                                    android:background="@drawable/round_rect_grey_border">

                                    <TextView
                                        android:id="@+id/textView3"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:text="Why add your organization?"
                                        android:paddingLeft="@dimen/dimen_10dp"
                                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                        android:textColor="@color/grey_80" />

                                    <ImageButton
                                        android:id="@+id/bt_toggle_text"
                                        android:layout_width="?attr/actionBarSize"
                                        android:layout_height="?attr/actionBarSize"
                                        android:background="?attr/selectableItemBackgroundBorderless"
                                        android:tint="@color/grey_80"
                                        app:srcCompat="@drawable/ic_expand_arrow" />

                                </LinearLayout>

                                <LinearLayout
                                    android:visibility="gone"
                                    android:id="@+id/lyt_expand_text"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:layout_marginTop="@dimen/dimen_10dp">

                                        <ImageView
                                            android:layout_gravity="center"
                                            android:layout_width="@dimen/dimen_20dp"
                                            android:layout_height="@dimen/dimen_20dp"
                                            android:src="@drawable/ic_pluse"
                                            android:background="@drawable/shape_circle_themcolor"
                                            android:tint="@color/item_row_start_color"
                                            android:padding="@dimen/dimen_5dp"
                                            />

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content">
                                            <TextView
                                                android:padding="@dimen/dimen_10dp"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginBottom="@dimen/spacing_medium"
                                                android:text="Anyone on Fammeo can create a new organization page"
                                                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                                                android:textColor="@color/grey_60" />
                                        </LinearLayout>
                                    </LinearLayout>
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:layout_marginTop="@dimen/dimen_10dp">

                                        <ImageView
                                            android:layout_gravity="center"
                                            android:layout_width="@dimen/dimen_20dp"
                                            android:layout_height="@dimen/dimen_20dp"
                                            android:src="@drawable/ic_pluse"
                                            android:background="@drawable/shape_circle_themcolor"
                                            android:tint="@color/item_row_start_color"
                                            android:padding="@dimen/dimen_5dp"
                                            />
                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content">
                                            <TextView
                                                android:layout_marginTop="@dimen/dimen_5dp"
                                                android:padding="@dimen/dimen_5dp"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginBottom="@dimen/spacing_medium"
                                                android:text="Organization pages show employees, students and connected content"
                                                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                                                android:textColor="@color/grey_60" />
                                        </LinearLayout>
                                    </LinearLayout>
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:layout_marginTop="@dimen/dimen_10dp">

                                        <ImageView
                                            android:layout_gravity="center"
                                            android:layout_width="@dimen/dimen_20dp"
                                            android:layout_height="@dimen/dimen_20dp"
                                            android:src="@drawable/ic_pluse"
                                            android:background="@drawable/shape_circle_themcolor"
                                            android:tint="@color/item_row_start_color"
                                            android:padding="@dimen/dimen_5dp"
                                            />
                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content">
                                            <TextView
                                                android:padding="@dimen/dimen_7dp"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginBottom="@dimen/spacing_medium"
                                                android:text="Promote your organization page by adding a link whereever you want, on your own website or social media "
                                                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                                                android:textColor="@color/grey_60" />
                                        </LinearLayout>
                                    </LinearLayout>
                                </LinearLayout>

                            </LinearLayout>
                        </androidx.core.widget.NestedScrollView>

                    </androidx.cardview.widget.CardView>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/spacing_large" />


                    <androidx.recyclerview.widget.RecyclerView
                        android:visibility="gone"
                        android:id="@+id/recycler_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scrollbars="vertical"
                        />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_data"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/spacing_large"
                        android:layout_marginRight="@dimen/spacing_large"
                        android:background="#F19292"
                        android:padding="@dimen/dimen_7dp"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="2dp"
                        android:layout_marginTop="@dimen/dimen_10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="vertical"
                            android:padding="@dimen/dimen_7dp"
                            android:paddingLeft="@dimen/spacing_middle"
                            android:paddingRight="@dimen/spacing_middle">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="@dimen/dimen_7dp">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center">

                                    <RelativeLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">

                                        <RelativeLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:fillAfter="false"
                                            android:fillEnabled="false">

                                            <ImageView
                                                android:id="@+id/search_image"
                                                android:layout_width="@dimen/dimen_35dp"
                                                android:layout_height="@dimen/dimen_35dp"
                                                android:src="@color/blue_700"
                                                android:scaleType="fitXY" />

                                            <TextView
                                                android:id="@+id/search_image_text"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_centerInParent="true"
                                                android:textColor="@android:color/white"
                                                android:textSize="@dimen/icon_text" />

                                        </RelativeLayout>

                                    </RelativeLayout>
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="@dimen/dimen_12dp"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/txt_name"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Organization Name"
                                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"
                                        android:textColor="@color/grey_80"
                                        android:textSize="13dp" />

                                    <TextView
                                        android:id="@+id/txt_email"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/spacing_medium"
                                        android:text="Create Organization"
                                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
                                        android:textColor="@color/grey_80"
                                        android:textSize="13dp" />
                                </LinearLayout>

                                <androidx.cardview.widget.CardView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    app:cardCornerRadius="10dp"
                                    app:cardElevation="2dp"
                                    android:layout_gravity="center">
                                    <ImageView
                                        android:id="@+id/btn_create"
                                        android:background="#7367F0"
                                        android:padding="@dimen/dimen_10dp"
                                        android:layout_width="@dimen/dimen_40dp"
                                        android:layout_height="@dimen/dimen_35dp"
                                        android:src="@drawable/create_user"/>

                                </androidx.cardview.widget.CardView>

                            </LinearLayout>


                        </LinearLayout>

                    </androidx.cardview.widget.CardView>
                </LinearLayout>

            </androidx.coordinatorlayout.widget.CoordinatorLayout>

        </LinearLayout>
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/pbHeaderProgress"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:padding="@dimen/dimen_10dp"
            android:background="@drawable/style_progress_container_background"
            android:orientation="vertical">
            <ProgressBar
                android:id="@+id/prgLoading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:indeterminate="true"
                android:padding="@dimen/dimen_10dp"
                style="?android:attr/progressBarStyle"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:textSize="@dimen/dimen_16dp"
                />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>