<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/grey_5">


    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="false"
            app:contentScrim="?attr/colorPrimary"
            app:expandedTitleTextAppearance="@style/TextAppearance.AppCompat.Title"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:titleEnabled="false">

            <ProgressBar
                android:visibility="gone"
                android:id="@+id/pr_imageLoder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                />
            <ImageView
                android:id="@+id/bg_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                app:layout_anchor="@+id/app_bar_layout"
                app:layout_anchorGravity="center"
                android:scaleType="fitXY"
                app:layout_collapseMode="parallax" />
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/overlay_dark_10" />

            <androidx.appcompat.widget.Toolbar
                android:visibility="gone"
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:contentInsetStartWithNavigation="0dp"
                app:layout_collapseMode="pin"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />
            <RelativeLayout
                android:layout_width="@dimen/dimen_80dp"
                android:layout_height="@dimen/dimen_80dp"
                app:fabSize="normal"
                android:layout_gravity="bottom|center"
                app:layout_anchorGravity="bottom|right|end"
                android:padding="@dimen/dimen_4dp"
                android:background="@drawable/circle"
                android:layout_marginBottom="@dimen/dimen_10dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fillAfter="false"
                    android:fillEnabled="false"
                    android:background="@drawable/circle">

                    <com.fammeo.app.view.siv.CircularImageView
                        android:id="@+id/search_image"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:scaleType="fitXY"
                        />

                    <TextView
                        android:id="@+id/search_image_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:textSize="@dimen/icon_star" />

                </RelativeLayout>

            </RelativeLayout>
        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:clipToPadding="false"
        android:scrollbars="none"
        android:scrollingCache="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="@dimen/dimen_10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/txt_name"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="@dimen/dimen_14sp"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"
                    android:textColor="@color/grey_60"
                    />

                <TextView
                    android:id="@+id/txt_uname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"
                    android:textColor="@color/grey_60"
                    android:textSize="@dimen/dimen_14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone">
                <androidx.cardview.widget.CardView
                    android:layout_marginTop="@dimen/dimen_10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/spacing_large"
                    android:layout_marginRight="@dimen/spacing_large"
                    android:background="#F19292"
                    android:padding="@dimen/dimen_7dp"
                    app:cardCornerRadius="@dimen/dimen_5dp"
                    app:cardElevation="3dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal"
                        android:padding="@dimen/dimen_7dp"
                        android:paddingLeft="@dimen/spacing_middle"
                        android:paddingRight="@dimen/spacing_middle">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1">
                            <TextView
                                android:layout_gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="About"
                                android:textSize="@dimen/dimen_17sp"
                                android:padding="@dimen/dimen_7dp"
                                android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"
                                android:textColor="@color/grey_90"
                                />
                            <TextView
                                android:id="@+id/txt_title"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/spacing_medium"
                                android:text=""
                                android:layout_marginLeft="@dimen/dimen_10dp"
                                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                                android:textColor="@color/grey_60" />
                            <TextView
                                android:id="@+id/txt_dec"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/spacing_medium"
                                android:text=""
                                android:layout_marginLeft="@dimen/dimen_10dp"
                                style="@style/EditText.Flat.Grey"
                                android:textColor="@color/grey_60" />
                            <TextView
                                android:id="@+id/txt_link"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/spacing_medium"
                                android:autoLink="web"
                                android:linksClickable="true"
                                android:layout_marginLeft="@dimen/dimen_10dp"
                                style="@style/EditText.Flat.Grey"
                                android:textColor="@color/grey_60" />
                        </LinearLayout>

                        <ImageButton
                            android:id="@+id/img_btn_about"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:clickable="true"
                            android:padding="@dimen/dimen_7dp"
                            app:srcCompat="@drawable/ic_create_black" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_marginTop="@dimen/dimen_10dp"
                    android:id="@+id/card_data"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/spacing_large"
                    android:layout_marginRight="@dimen/spacing_large"
                    android:background="#F19292"
                    android:padding="@dimen/dimen_7dp"
                    app:cardCornerRadius="@dimen/dimen_5dp"
                    app:cardElevation="3dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal"
                        android:padding="@dimen/dimen_7dp"
                        android:paddingLeft="@dimen/spacing_middle"
                        android:paddingRight="@dimen/spacing_middle">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1">
                            <TextView
                                android:layout_gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Social Links"
                                android:textSize="@dimen/dimen_17sp"
                                android:padding="@dimen/dimen_7dp"
                                android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"
                                android:textColor="@color/grey_90"
                                />
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <com.google.android.material.floatingactionbutton.FloatingActionButton
                                    android:id="@+id/flt_fb"
                                    android:visibility="gone"
                                    android:padding="@dimen/dimen_10dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="@dimen/spacing_middle"
                                    android:clickable="true"
                                    android:tint="@android:color/white"
                                    app:backgroundTint="@color/themecolor"
                                    app:fabSize="mini"
                                    app:srcCompat="@drawable/ic_facebook" />
                                <com.google.android.material.floatingactionbutton.FloatingActionButton
                                    android:id="@+id/flt_linkdin"
                                    android:visibility="gone"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="@dimen/spacing_middle"
                                    android:clickable="true"
                                    android:tint="@android:color/white"
                                    app:backgroundTint="@color/themecolor"
                                    app:fabSize="mini"
                                    app:srcCompat="@drawable/linkedin" />
                                <com.google.android.material.floatingactionbutton.FloatingActionButton
                                    android:id="@+id/flt_twitter"
                                    android:visibility="gone"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="@dimen/spacing_middle"
                                    android:clickable="true"
                                    android:tint="@android:color/white"
                                    app:backgroundTint="@color/themecolor"
                                    app:fabSize="mini"
                                    app:srcCompat="@drawable/ic_twitter" />
                                <com.google.android.material.floatingactionbutton.FloatingActionButton
                                    android:id="@+id/flt_instagram"
                                    android:visibility="gone"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="@dimen/spacing_middle"
                                    android:clickable="true"
                                    android:tint="@android:color/white"
                                    app:backgroundTint="@color/themecolor"
                                    app:fabSize="mini"
                                    app:srcCompat="@drawable/ic_instagram" />
                                <TextView
                                    android:visibility="gone"
                                    android:id="@+id/txt_socContent"
                                    android:layout_width="match_parent"
                                    android:background="@drawable/no_content_bg"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/dimen_15dp"
                                    android:textColor="#757ff3"
                                    android:textStyle="bold"
                                    android:layout_marginRight="@dimen/dimen_10dp"
                                    android:layout_marginLeft="@dimen/dimen_10dp"
                                    android:padding="@dimen/dimen_10dp"
                                    android:layout_marginBottom="@dimen/dimen_10dp"
                                    />
                            </LinearLayout>
                        </LinearLayout>

                        <ImageButton
                            android:id="@+id/img_btn_socLink"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:clickable="true"
                            android:padding="@dimen/dimen_7dp"
                            app:srcCompat="@drawable/ic_create_black" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_marginTop="@dimen/dimen_10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/spacing_large"
                    android:layout_marginRight="@dimen/spacing_large"
                    android:background="#F19292"
                    android:padding="@dimen/dimen_7dp"
                    app:cardCornerRadius="@dimen/dimen_5dp"
                    app:cardElevation="3dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="horizontal"
                            android:padding="@dimen/dimen_7dp"
                            android:paddingLeft="@dimen/spacing_middle"
                            android:paddingRight="@dimen/spacing_middle">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_weight="1">
                                <TextView
                                    android:layout_gravity="center"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Address"
                                    android:padding="@dimen/dimen_7dp"
                                    android:textSize="@dimen/dimen_17sp"
                                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"
                                    android:textColor="@color/grey_90"
                                    />

                            </LinearLayout>


                            <ImageButton
                                android:visibility="gone"
                                android:id="@+id/img_edt_address"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/dimen_7dp"
                                android:background="@null"
                                android:clickable="true"
                                app:srcCompat="@drawable/ic_create_black" />
                        </LinearLayout>
                        <androidx.recyclerview.widget.RecyclerView
                            android:paddingLeft="@dimen/dimen_10dp"
                            android:paddingRight="@dimen/dimen_5dp"
                            android:id="@+id/recycler_view_address"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scrollbars="vertical" />
                        <TextView
                            android:visibility="gone"
                            android:id="@+id/txt_addContent"
                            android:layout_width="match_parent"
                            android:background="@drawable/no_content_bg"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/dimen_15dp"
                            android:textColor="#757ff3"
                            android:textStyle="bold"
                            android:layout_marginRight="@dimen/dimen_10dp"
                            android:layout_marginLeft="@dimen/dimen_10dp"
                            android:padding="@dimen/dimen_10dp"
                            android:layout_marginBottom="@dimen/dimen_10dp"
                            />

                        <TextView
                            android:id="@+id/txt_addNewAddress"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Add New"
                            android:padding="@dimen/dimen_7dp"
                            android:layout_weight="1"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                            android:textSize="@dimen/dimen_14sp"
                            android:textColor="@color/themecolor"
                            android:gravity="end"/>
                    </LinearLayout>


                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_marginTop="@dimen/dimen_10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/spacing_large"
                    android:layout_marginRight="@dimen/spacing_large"
                    android:background="#F19292"
                    android:padding="@dimen/dimen_7dp"
                    app:cardCornerRadius="@dimen/dimen_5dp"
                    app:cardElevation="3dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="horizontal"
                            android:padding="@dimen/dimen_7dp"
                            android:paddingLeft="@dimen/spacing_middle"
                            android:paddingRight="@dimen/spacing_middle">
                            <LinearLayout
                                android:id="@+id/lin_email"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_weight="1">
                                <TextView
                                    android:layout_gravity="center"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Email"
                                    android:textSize="@dimen/dimen_17sp"
                                    android:padding="@dimen/dimen_7dp"
                                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"
                                    android:textColor="@color/grey_90"
                                    />
                                <TextView
                                    android:visibility="gone"
                                    android:id="@+id/txt_emailtype"
                                    android:layout_gravity="center"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Email"
                                    android:layout_marginLeft="@dimen/dimen_7dp"
                                    android:textSize="@dimen/dimen_14sp"
                                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"
                                    android:textColor="@color/grey_90"
                                    />
                                <TextView
                                    android:visibility="gone"
                                    android:id="@+id/txt_email"
                                    android:layout_gravity="center"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Email"
                                    android:layout_marginLeft="@dimen/dimen_7dp"
                                    android:textSize="@dimen/dimen_14sp"
                                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"
                                    android:textColor="@color/grey_90"
                                    />

                            </LinearLayout>
                            <ImageButton
                                android:visibility="gone"
                                android:id="@+id/imgbtn_email"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="top"
                                android:padding="@dimen/dimen_7dp"
                                android:background="@null"
                                android:clickable="true"
                                app:srcCompat="@drawable/ic_create_black" />
                        </LinearLayout>
                        <androidx.recyclerview.widget.RecyclerView
                            android:paddingLeft="@dimen/dimen_10dp"
                            android:paddingRight="@dimen/dimen_5dp"
                            android:id="@+id/recycler_view_email"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scrollbars="vertical" />
                        <TextView
                            android:visibility="gone"
                            android:id="@+id/txt_emailContent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/dimen_15dp"
                            android:textStyle="bold"
                            android:padding="@dimen/dimen_10dp"
                            android:layout_gravity="center"
                            />
                        <TextView
                            android:id="@+id/txt_addNewEmail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Add New"
                            android:padding="@dimen/dimen_7dp"
                            android:layout_weight="1"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                            android:textSize="@dimen/dimen_14sp"
                            android:textColor="@color/themecolor"
                            android:gravity="end"/>
                    </LinearLayout>


                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_marginTop="@dimen/dimen_10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/spacing_large"
                    android:layout_marginRight="@dimen/spacing_large"
                    android:background="#F19292"
                    android:padding="@dimen/dimen_7dp"
                    app:cardCornerRadius="@dimen/dimen_5dp"
                    app:cardElevation="3dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="horizontal"
                            android:padding="@dimen/dimen_7dp"
                            android:paddingLeft="@dimen/spacing_middle"
                            android:paddingRight="@dimen/spacing_middle">

                            <TextView
                                android:layout_weight="1"
                                android:layout_gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Phone"
                                android:textSize="@dimen/dimen_17sp"
                                android:padding="@dimen/dimen_7dp"
                                android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"
                                android:textColor="@color/grey_90"
                                />
                            <ImageButton
                                android:visibility="gone"
                                android:id="@+id/img_btn_phone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/dimen_7dp"
                                android:background="@null"
                                android:clickable="true"
                                app:srcCompat="@drawable/ic_create_black" />
                        </LinearLayout>

                        <androidx.recyclerview.widget.RecyclerView
                            android:paddingLeft="@dimen/dimen_10dp"
                            android:paddingRight="@dimen/dimen_5dp"
                            android:id="@+id/recycler_view_phone"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scrollbars="vertical" />
                        <TextView
                            android:visibility="gone"
                            android:id="@+id/txt_phoneContent"
                            android:layout_width="match_parent"
                            android:background="@drawable/no_content_bg"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/dimen_15dp"
                            android:textColor="#757ff3"
                            android:textStyle="bold"
                            android:layout_marginRight="@dimen/dimen_10dp"
                            android:layout_marginLeft="@dimen/dimen_10dp"
                            android:padding="@dimen/dimen_10dp"
                            android:layout_marginBottom="@dimen/dimen_10dp"
                            />
                        <TextView
                            android:id="@+id/txt_addNewPhone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Add New"
                            android:padding="@dimen/dimen_7dp"
                            android:layout_weight="1"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                            android:textSize="@dimen/dimen_14sp"
                            android:textColor="@color/themecolor"
                            android:gravity="end"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_marginTop="@dimen/dimen_10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/spacing_large"
                    android:layout_marginRight="@dimen/spacing_large"
                    android:background="#F19292"
                    android:padding="@dimen/dimen_7dp"
                    app:cardCornerRadius="@dimen/dimen_5dp"
                    app:cardElevation="3dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        android:padding="@dimen/dimen_7dp"
                        android:paddingLeft="@dimen/spacing_middle"
                        android:paddingRight="@dimen/spacing_middle">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_weight="1"
                                android:layout_gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Languages"
                                android:textSize="@dimen/dimen_17sp"
                                android:padding="@dimen/dimen_7dp"
                                android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"
                                android:textColor="@color/grey_90"
                                />
                            <ImageButton
                                android:id="@+id/imgbt_lang"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="top"
                                android:padding="@dimen/dimen_7dp"
                                android:background="@null"
                                android:clickable="true"
                                app:srcCompat="@drawable/ic_create_black" />
                        </LinearLayout>

                        <TextView
                            android:visibility="gone"
                            android:id="@+id/txt_langContent"
                            android:layout_width="match_parent"
                            android:background="@drawable/no_content_bg"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/dimen_15dp"
                            android:textColor="#757ff3"
                            android:textStyle="bold"
                            android:layout_marginRight="@dimen/dimen_10dp"
                            android:layout_marginLeft="@dimen/dimen_10dp"
                            android:padding="@dimen/dimen_10dp"

                            />
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recycler_view_lang"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scrollbars="vertical" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_marginTop="@dimen/dimen_10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/spacing_large"
                    android:layout_marginRight="@dimen/spacing_large"
                    android:background="#F19292"
                    android:padding="@dimen/dimen_7dp"
                    app:cardCornerRadius="@dimen/dimen_5dp"
                    app:cardElevation="3dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="horizontal"
                            android:padding="@dimen/dimen_7dp"
                            android:paddingLeft="@dimen/spacing_middle"
                            android:paddingRight="@dimen/spacing_middle"
                            android:paddingBottom="@dimen/dimen_10dp">
                            <TextView
                                android:layout_gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Hobbies"
                                android:textSize="@dimen/dimen_17sp"
                                android:padding="@dimen/dimen_7dp"
                                android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"
                                android:textColor="@color/grey_90"
                                android:layout_weight="1"/>

                            <ImageButton
                                android:id="@+id/img_edit_hobbies"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/dimen_7dp"
                                android:background="@null"
                                android:clickable="true"
                                app:srcCompat="@drawable/ic_create_black" />
                        </LinearLayout>
                        <TextView
                            android:visibility="gone"
                            android:id="@+id/txt_hbContent"
                            android:layout_width="match_parent"
                            android:background="@drawable/no_content_bg"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/dimen_15dp"
                            android:textColor="#757ff3"
                            android:textStyle="bold"
                            android:layout_marginRight="@dimen/dimen_10dp"
                            android:layout_marginLeft="@dimen/dimen_10dp"
                            android:padding="@dimen/dimen_10dp"
                            android:layout_marginBottom="@dimen/dimen_10dp"
                            />
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recycler_view_hb"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scrollbars="vertical" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                android:layout_marginTop="@dimen/dimen_10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_large"
                android:layout_marginRight="@dimen/spacing_large"
                android:layout_marginBottom="@dimen/dimen_15dp"
                android:background="#F19292"
                android:padding="@dimen/dimen_7dp"
                app:cardCornerRadius="@dimen/dimen_5dp"
                app:cardElevation="3dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/dimen_10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal"
                        android:padding="@dimen/dimen_7dp"
                        android:paddingLeft="@dimen/spacing_middle"
                        android:paddingRight="@dimen/spacing_middle">
                        <TextView
                            android:layout_gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Skills"
                            android:textSize="@dimen/dimen_17sp"
                            android:padding="@dimen/dimen_7dp"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"
                            android:textColor="@color/grey_90"
                            android:layout_weight="1"/>

                        <ImageButton
                            android:id="@+id/img_edit_skills"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/dimen_7dp"
                            android:background="@null"
                            android:clickable="true"
                            app:srcCompat="@drawable/ic_create_black" />
                    </LinearLayout>
                    <TextView
                        android:visibility="gone"
                        android:id="@+id/txt_skillContent"
                        android:layout_width="match_parent"
                        android:background="@drawable/no_content_bg"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/dimen_15dp"
                        android:textColor="#757ff3"
                        android:textStyle="bold"
                        android:layout_marginRight="@dimen/dimen_10dp"
                        android:layout_marginLeft="@dimen/dimen_10dp"
                        android:padding="@dimen/dimen_10dp"
                        />
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_view_sk"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scrollbars="vertical" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/tab_layout"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:layout_gravity="left"
                    android:paddingLeft="@dimen/spacing_large"
                    android:paddingRight="@dimen/spacing_large"
                    app:tabGravity="fill"
                    app:tabIndicatorColor="@color/themecolor"
                    app:tabIndicatorHeight="3dp"
                    app:tabMode="scrollable" />
                <androidx.viewpager.widget.ViewPager
                    android:id="@+id/view_pager"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior" />
            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <com.mikhaellopez.circularimageview.CircularImageView
        android:visibility="gone"
        android:id="@+id/image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/photo_female_6"
        app:civ_border="true"
        app:civ_border_width="2dp"
        app:civ_shadow="true"
        app:civ_shadow_radius="0"
        app:layout_anchor="@id/app_bar_layout"
        app:layout_anchorGravity="bottom|center" />


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_editImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacing_mlarge"
        android:clickable="true"
        android:tint="@android:color/white"
        app:backgroundTint="@color/themecolor"
        app:fabSize="mini"
        app:layout_anchor="@id/app_bar_layout"
        app:layout_anchorGravity="bottom|right|end"
        app:srcCompat="@drawable/ic_settings_white" />


    <LinearLayout
        android:layout_gravity="center"
        android:id="@+id/pbHeaderProgress"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:padding="@dimen/dimen_10dp"
        android:background="@drawable/style_progress_container_background"
        android:orientation="vertical">
        <ProgressBar
            android:id="@+id/prgLoading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:indeterminate="true"
            android:padding="@dimen/dimen_10dp"
            style="?android:attr/progressBarStyle"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:textSize="@dimen/dimen_16dp"
            />
    </LinearLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>

